{
	"manifest_version": 2,
	"name": "Window Arranger",
	"description": "Improves arrangement of windows.",
	"author": "Artur Pragacz",
	"homepage_url": "https://extension.pragacz.com",
	"version": "1.0.2b",

	"browser_specific_settings": {
		"gecko": {
			// "id": "window_arranger@experiments.addons.mozilla.org",
			"id": "window_arranger@extension.pragacz.com",
			"strict_min_version": "67.0"
		}
	},

	"background": {
		"page": "background.html"
	},

	"browser_action": {
		"browser_style": true,
		"default_title": "Window Arranger",
		"default_popup": "page.html",
		"default_icon": {
			"19": "icons/window19.png",
			"38": "icons/window38.png"
		}
	},

	"icons": {
		"48": "icons/window.png",
		"96": "icons/window@2x.png"
	},

	"experiment_apis": {
		"windowsExtended": {
			"schema": "experiment/schemas/windowsExtended.json",
			"parent": {
				"scopes": [ "addon_parent" ],
				"paths": [ [ "windowsExt" ] ],
				"script": "experiment/windowsExtended.js"
			}
		}
	},

	"permissions": [
		"nativeMessaging",
		"storage",
		"sessions"
	]
}
